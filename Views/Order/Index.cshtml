@model List<SportiveOrder.Entity.Order>;


@if (Model == null || Model.Count < 1)
{
    <div>
        <p>
            Siparişiniz bulunamadı
        </p>
    </div>
}
else
{
   <div>
     
       <table class="table table-condensed">
           <thead>
               <tr class="cart_menu">
                   <td class="image">Sipariş Numarası</td>
                   <td class="price">Sipariş Tarihi</td>
                   <td class="total">Toplam</td>
                   <td></td>
               </tr>
           </thead>
           <tbody>
               @foreach (var item in Model)
               {
                   <tr>
                       <td class="cart_description">
                           <h4><a asp-action="Details" asp-controller="Order" asp-route-orderId="@item.OrderId">@item.OrderId</a></h4>
                           <p>User ID:@item.UserId</p>
                       </td>
                       <td class="cart_total">
                           <p class="cart_total_price">@item.CreatingAt</p>
                       </td>
                       <td class="cart_delete">
                           <p>selamms</p>
                       </td>
                   </tr>
               }

           </tbody>
       </table>
      
   </div>
}   


