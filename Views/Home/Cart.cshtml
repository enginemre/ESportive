@model Cart;
@{
    ViewData["Title"] = "Sepet";
    Layout = "_Layout";
}

@if (Model == null || Model.products == null || Model.products.Count ==0)
{

    <div>
        Sepetiniz Boş
    </div>
}
else
{
    <form asp-action="CreateOrder" asp-controller="Home">
        <div class="card my-4">

            <table class="table table-borderless table-shopping-cart">
                <thead class="text-muted">
                    <tr class="small text-uppercase">
                        <th scope="col">Product</th>
                        <th scope="col" width="120">Quantity</th>
                        <th scope="col" width="120">Price</th>
                        <th scope="col" class="text-right" width="200"> </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.products)
                    {
                        var sum = item.quantity * Convert.ToDouble(@item.product.PurchasePrice);
                        <tr>
                            <td>
                                <figure class="itemside">
                                    <div class="aside">
                                        <img src="~/images/product1.jpg" class="img-sm" />
                                    </div>
                                    <figcaption class="info">
                                        <a href="#" class="title text-dark">@item.product.ProductName</a>
                                        <p class="text-muted small"><span>@Localizer["product_group"]</span>: @item.product.ProductGroup <br> @Localizer["size"]: @item.product.Size</p>
                                    </figcaption>
                                </figure>
                            </td>
                            <td>
                                <input min="1" type="number" asp-for="@item.quantity" class="form-control" value="@item.quantity">
                            </td>
                            <td>
                                <div class="price-wrap">
                                    <var class="price">@sum ₺</var>
                                    <small class="text-muted"> @item.product.PurchasePrice ₺ </small>
                                </div> <!-- price-wrap .// -->
                            </td>
                            <td class="text-right">
                                <a asp-action="RemoveCart" asp-controller="Home" asp-route-id="@item.product.ProductId" class="btn btn-danger btn-round"> Remove</a>
                            </td>
                        </tr>
                       
                    }
                </tbody>
            </table>

            <div class="card-body border-top">
                <button class="btn btn-primary float-md-right" type="submit"> Sipariş Oluştur <i class="fa fa-chevron-right"></i> </button>
                <a href="#" class="btn btn-light"> <i class="fa fa-chevron-left"></i> Continue shopping </a>
            </div>
        </div> <!-- card.// -->
