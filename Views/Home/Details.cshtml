@model Product

@{
    Layout = "_Layout";
}
<div class="container">
    <div class="row p-4">
        <div class="col-sm-3 ">
            <div class="left-sidebar">
                <h2>Kategoriler</h2>
                <div class="panel-group category-products" id="accordian">
                    @await Component.InvokeAsync("Category")

                </div>

            </div>
        </div>
        <div class="col-sm-9 padding-right">
            <div class="product-details">
                <div class="row">
                    <div class="col-sm-5">
                        <div class="view-product">
                            <img src="~/images/product1.jpg" />
                        </div>
                    </div>

                    <div class="col-sm-7">
                        <div class="product-information">
                            <img src="images/product-details/new.jpg" class="newarrival" alt="" />
                            <h2>@Model.ProductName/h2>
                            <p>Web ID: @Model.ProductId/p>
                            <span>
                                <span>@Model.SalePrice ₺</span>
                                <label>Miktar:</label>
                                <input type="text" value="1" />
                                <a class="btn btn-default add-to-cart" asp-action="AddCart" asp-controller="Home" asp-route-id="@Model.ProductId"><i class="fa fa-shopping-cart"></i>Sepete Ekle</a>
                            </span>
                            <p><b>Alış Fiyatı:</b> @Model.PurchasePrice/p>
                            <p><b>Stok Kodu:</b> @Model.StockCode/p>
                            <p><b>Stok:</b> @Model.Stock</p>
                            <p><b>Barkod:</b>@Model.Barcode </p>
                            <p><b>Beden:</b> @Model.Size</p>
                            <p><b>Renk:</b> @Model.Color</p>
                            <p><b>Ürün Grubu:</b> @Model.ProductGroup </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>