@model List<Category>




<article class="filter-group">
    <header class="card-header">
        <a href="#" data-toggle="collapse" data-target="#collapse_1" aria-expanded="true" class="">
            <i class="icon-control fa fa-chevron-down"></i>
            <h6 class="title">@Localizer["categories"]</h6>
        </a>
    </header>
    <div class="filter-content collapse show" id="collapse_1" style="">
        <div class="card-body">
            <ul class="list-menu">
                <div>

                    <a class="@(ViewBag.category_id?.ToString() == null? "font-weight-bold":"")" asp-action="Index" asp-controller="Home">@Localizer["category"]</a>

                </div>

                @foreach (var item in Model)
                {

                    <li>
                        <a asp-action="Index" asp-controller="Home" asp-route-category_id="@item.CategoryId" class=" @(ViewBag.category_id?.ToString() == item.CategoryId.ToString()? "font-weight-bold":"")">@item.CategoryName</a>
                    </li>

                }
            </ul>

        </div>
    </div>
</article>
<article class="filter-group">
    <header class="card-header">
        <a href="#" data-toggle="collapse" data-target="#collapse_3" aria-expanded="true" class="">
            <i class="icon-control fa fa-chevron-down"></i>
            <h6 class="title">@Localizer["price_range"] </h6>
        </a>
    </header>
    <div class="filter-content collapse show" id="collapse_3" style="">
        <div class="card-body">
            <input type="range" class="custom-range" min="0" max="100">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Min</label>
                    <input class="form-control" placeholder="0₺" type="number">
                </div>
                <div class="form-group text-right col-md-6">
                    <label>Max</label>
                    <input class="form-control" placeholder="1000₺" type="number">
                </div>
            </div> <!-- form-row.// -->
            <button class="btn btn-block btn-primary">@Localizer["apply"]</button>
        </div><!-- card-body.// -->
    </div>
</article> <!-- filter-group .// -->
