@using Microsoft.AspNetCore.Identity
@using SportiveOrder.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Admin" asp-action="Index" title="Manage">@UserManager.GetUserName(User)!</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark"  asp-action="Account"  asp-controller="Home" title="Manage">@UserManager.GetUserName(User)!</a>
            </li>
        }

        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-action="Cart" asp-controller="Home">Sepetim</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-controller="Home" asp-action="Logout">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Çıkış</button>
            </form>
        </li>

    }
    else
    {

        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
        </li>
    }
</ul>
